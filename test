import re
from typing import List

def build_sentences(text_list: List[str]) -> List[str]:
    """
    Build sentences from list of text:
    - Append items until a '.' ends a sentence
    - Skip any text containing < > / |
    - Start new sentence after each '.'
    """
    sentences = []
    current = []

    for text in text_list:
        if re.search(r"[<>/|]", text):  # skip unwanted text
            continue
        
        t = text.strip()
        if not t:
            continue

        current.append(t.rstrip('.'))  # avoid extra dots

        if t.endswith("."):  # sentence finished
            sentence = " ".join(current).strip()
            if not sentence.endswith("."):
                sentence += "."
            sentences.append(sentence)
            current = []  # reset for next sentence

    # Handle leftover if it didnâ€™t end with '.'
    if current:
        sentence = " ".join(current).strip()
        if not sentence.endswith("."):
            sentence += "."
        sentences.append(sentence)

    return sentences


# Example
data = [
    "Hello world",
    "this continues",
    "and now ends.",
    "Skip <this> line",
    "Another start",
    "finish here."
]

print(build_sentences(data))
