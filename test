def is_heading_like(self, para):
    text = para.text.strip()

    # Reject empty
    if not text:
        return False

    # Accept numbered headings
    if re.match(r'^(\d+\.)+(\s+|$)', text):
        return True

    # Accept if ALL runs are bold AND no sentence punctuation (likely heading)
    bold_runs = [run.text.strip() for run in para.runs if run.bold and run.text.strip()]
    full_runs = [run.text.strip() for run in para.runs if run.text.strip()]

    # Only accept bold if entire paragraph is bold
    if bold_runs and bold_runs == full_runs:
        if len(text.split()) < 12 and not text.endswith('.'):
            return True

    # Accept all-uppercase short titles
    if text.isupper() and len(text.split()) < 10:
        return True

    return False
