import json

# Read from text file
with open("secret.text", "r") as f:
    lines = f.readlines()

data = {}
for line in lines:
    line = line.strip()
    if not line or line.startswith("#"):  # skip blanks and comments
        continue
    if "=" in line:
        key, value = line.split("=", 1)
        data[key.strip()] = value.strip()
    else:
        # if line has no '=' treat as raw value
        data["value"] = line

# Save to JSON
with open("secret.json", "w") as f:
    json.dump(data, f, indent=2)

print("âœ… Converted to secret.json")
