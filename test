from sklearn.feature_extraction.text import TfidfVectorizer
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Example text data
text_data = [
    "This is a simple example.",
    "Here's another document with more words.",
    "Short one.",
    "Yet another example to visualize text data."
]

# Calculate TF-IDF
tfidf = TfidfVectorizer(max_features=10)  # Limit to top 10 terms for visualization
tfidf_matrix = tfidf.fit_transform(text_data)
tfidf_df = pd.DataFrame(tfidf_matrix.toarray(), columns=tfidf.get_feature_names_out())

# Summarize term importance
term_importance = tfidf_df.sum().sort_values(ascending=False)

# Plot TF-IDF scores
plt.figure(figsize=(8, 6))
sns.barplot(x=term_importance.values, y=term_importance.index, palette="viridis")
plt.title('TF-IDF Feature Distribution')
plt.xlabel('TF-IDF Score')
plt.ylabel('Terms')
plt.show()
