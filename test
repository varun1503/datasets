import streamlit as st

# Display messages in reverse order (latest on top)
for msg in reversed(st.session_state.messagetabi):
    if msg["role"] == "user":
        # ðŸ‘‡ USER (bold question)
        st.markdown(f"""
        <div style="text-align: right; margin: 8px 0;">
            <div style="
                display: inline-block;
                padding: 10px 14px;
                border-radius: 18px 18px 0px 18px;
                max-width: 75%;
                font-family: Arial, sans-serif;
                word-wrap: break-word;
                font-size: 18px;
                font-weight: bold;  /* ðŸ‘ˆ Bold for user question */
                line-height: 1.5;
            ">
                {msg['content']}
            </div>
        </div>
        """, unsafe_allow_html=True)
    else:
        # ðŸ‘‡ ASSISTANT (normal text)
        st.markdown(f"""
        <div style="text-align: left; margin: 8px 0;">
            <div style="
                display: inline-block;
                padding: 10px 14px;
                border-radius: 18px 18px 18px 0px;
                max-width: 75%;
                font-family: Arial, sans-serif;
                word-wrap: break-word;
                font-size: 18px;
                font-weight: normal;  /* ðŸ‘ˆ Normal for assistant answer */
                line-height: 1.5;
            ">
                {msg['content']}
            </div>
        </div>
        """, unsafe_allow_html=True)
