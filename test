from docx import Document
from docx.text.paragraph import Paragraph
from docx.oxml import OxmlElement
from docx.oxml.ns import qn
import pandas as pd
import json, ast, re

def _to_dict_safe(x):
    if isinstance(x, dict):
        return x
    if isinstance(x, str):
        s = x.strip()
        if not s:
            return {}
        try:
            return json.loads(s)
        except Exception:
            try:
                return ast.literal_eval(s)
            except Exception:
                return {}
    return {}

def _insert_paragraph_after(paragraph: Paragraph, text: str = "") -> Paragraph:
    new_p = OxmlElement("w:p")
    paragraph._p.addnext(new_p)
    new_para = Paragraph(new_p, paragraph._parent)
    if text:
        new_para.add_run(text)
    return new_para

def _norm(s: str) -> str:
    # collapse multiple spaces, lowercase
    return re.sub(r"\s+", " ", (s or "")).strip().lower()

def replace_finding_details_section(
    doc_path: str,
    df: pd.DataFrame,
    output_path: str,
    finding_col: str = "Finding Details",
    rfr_col: str = "rfr_value",
    end_heading_text: str = "Validation Assessment Details",
):
    doc = Document(doc_path)
    paragraphs = doc.paragraphs

    # 1) find "Finding Details" heading
    start_idx = None
    for i, p in enumerate(paragraphs):
        if "finding details" in _norm(p.text):
            start_idx = i
            break
    if start_idx is None:
        raise ValueError("Could not find a paragraph containing 'Finding Details'.")

    # 2) find the end marker heading "Validation Assessment Details"
    end_idx = None
    end_norm = _norm(end_heading_text)
    for j in range(start_idx + 1, len(paragraphs)):
        if end_norm in _norm(paragraphs[j].text):
            end_idx = j
            break
    if end_idx is None:
        # fallback: if not found, default to end of doc
        end_idx = len(paragraphs)

    # 3) delete everything after 'Finding Details' up to (but not including) end heading
    for k in range(end_idx - 1, start_idx, -1):
        elm = paragraphs[k]._element
        elm.getparent().remove(elm)

    # 4) insert new blocks after the 'Finding Details' heading
    anchor = paragraphs[start_idx]
    m_counter = 1

    for _, row in df.iterrows():
        finding_text = str(row.get(finding_col, "") or "").strip()
        rfr_dict = _to_dict_safe(row.get(rfr_col, {}))
        items = list(rfr_dict.items()) or [( "", "" )]

        for q, resp in items:
            p = _insert_paragraph_after(anchor, f"Finding M{m_counter}")
            if p.runs: p.runs[0].bold = True
            p = _insert_paragraph_after(p, finding_text)

            p = _insert_paragraph_after(p, f"Challenge M{m_counter}")
            if p.runs: p.runs[0].bold = True
            p = _insert_paragraph_after(p, str(q).strip())

            p = _insert_paragraph_after(p, f"Modeling Team Response M{m_counter}")
            if p.runs: p.runs[0].bold = True
            p = _insert_paragraph_after(p, str(resp).strip())

            p = _insert_paragraph_after(p, "")  # spacer
            anchor = p
            m_counter += 1

    doc.save(output_path)
    print(f"âœ… Updated document saved to: {output_path}")
