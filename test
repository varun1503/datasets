import os
import tempfile

def s3_object_read(self, s3_file):
    import os
    from pathlib import Path

    s3_obj = S3Utils()
    temp_dir = tempfile.gettempdir()  # OS-safe temp directory

    # Ensure subfolder for isolation if needed
    data_dir = os.path.join(temp_dir, "s3_temp_data")
    os.makedirs(data_dir, exist_ok=True)

    # Build full path to where the file will be saved
    local_file_path = os.path.join(data_dir, os.path.basename(s3_file))

    # Download file
    s3_obj.download_file(s3_file, local_file_path)

    return local_file_path
