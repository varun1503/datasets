def find_caption(all_paragraphs, current_para_idx):
    caption_keywords = ["figure", "fig", "image", "table", "exhibit", "chart", "graph"]
    # Try previous paragraph
    if current_para_idx > 0:
        prev_text = all_paragraphs[current_para_idx - 1].text.strip()
        if any(kw in prev_text.lower() for kw in caption_keywords):
            return prev_text
    # Try next paragraph
    if current_para_idx + 1 < len(all_paragraphs):
        next_text = all_paragraphs[current_para_idx + 1].text.strip()
        if any(kw in next_text.lower() for kw in caption_keywords):
            return next_text
    return ""
