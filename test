import re

def clean_and_filter_tuples(data_list, theme_keyword):
    """
    Cleans up improperly formatted tuple-like strings and filters by the first element.
    
    Args:
        data_list (list): List of strings that look like tuples.
        theme_keyword (str): Theme to match (first element of each tuple).
        
    Returns:
        list of tuples: Filtered and cleaned tuples.
    """
    cleaned_list = []

    for item in data_list:
        # Remove leading/trailing junk characters
        item = item.strip().strip("',\"*()")

        # Split by comma, handling potential malformed parts
        parts = [x.strip() for x in re.split(r",\s*", item) if x.strip()]
        
        if parts and parts[0] == theme_keyword:
            cleaned_list.append(tuple(parts))

    return cleaned_list
