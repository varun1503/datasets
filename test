def get_dynamic_chunk_sizes(self, content: str):
    """
    Top-level is full content. The rest are based on a fixed ratio.
    """
    top_level_len = len(content)  # Level 0 chunk size (entire doc)
    
    if top_level_len <= 1000:
        return [top_level_len, 500, 250]  # Very small doc

    ratio = (1, 0.5, 0.25)  # Equivalent to 4096:2048:1024 pattern
    level_0 = top_level_len
    level_1 = int(level_0 * ratio[1])
    level_2 = int(level_0 * ratio[2])

    return [level_0, level_1, level_2]
