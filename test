import matplotlib.pyplot as plt
import networkx as nx

# Suppose this is your LangGraph workflow
from langgraph.graph import StateGraph

def dummy_func(state): return state

builder = StateGraph(dict)
builder.add_node("start", dummy_func)
builder.add_node("middle", dummy_func)
builder.add_node("end", dummy_func)
builder.add_edge("start", "middle")
builder.add_edge("middle", "end")

graph = builder.get_graph()

# Now plot using networkx
G = graph.get_graph()  # networkx.DiGraph

pos = nx.spring_layout(G)
nx.draw(G, pos, with_labels=True, node_color='lightblue', edge_color='gray', node_size=2000, font_size=10)
plt.title("LangGraph Workflow")
plt.show()
