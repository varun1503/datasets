def _delete_content_after_paragraph(paragraph):
    """
    Delete all content (including tables) after the given paragraph
    until a logical heading is reached (like Test, MRMG, Finding, etc.)
    """
    HEADING_KEYWORDS = [
        "test", "mrmg assessment", "mrmg evaluation", "findings", "finding", "limitation", "table", "section", "appendix"
    ]
    current = paragraph._p
    while True:
        next_elem = current.getnext()
        if next_elem is None:
            break

        # If it's a paragraph
        if next_elem.tag == qn("w:p"):
            para = Paragraph(next_elem, paragraph._parent)
            text = _norm(para.text)
            if any(text.startswith(h) for h in HEADING_KEYWORDS):
                break
        # If it's a table or image or content â€” remove
        current.getparent().remove(next_elem)
