import re

def fix_broken_words_safe(text):
    tokens = text.split()
    fixed = []
    
    i = 0
    while i < len(tokens):
        if len(tokens[i]) == 1 and i+1 < len(tokens):
            # merge single letter with next token
            fixed.append(tokens[i] + tokens[i+1])
            i += 2
        else:
            fixed.append(tokens[i])
            i += 1
    
    return " ".join(fixed)
