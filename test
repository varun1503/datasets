import re

def is_heading_by_style_or_number_or_section(self, para):
    text = para.text.strip()
    style = para.style.name if para.style else ""

    if not text:
        return False

    # Case 1: Paragraph has heading style
    if style.lower().startswith("heading"):
        return True

    # Case 2: Text starts with numbered section like "1.", "2.1.3", etc.
    if re.match(r'^(\d+\.)+(\s+|$)', text):
        return True

    # Case 3: Starts with word "Section" followed by a number (e.g., "Section 2.1" or "SECTION 3")
    if re.match(r'(?i)^section\s+\d+(\.\d+)*', text):
        return True

    return False
