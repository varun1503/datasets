@mcp.tool()
def search_cabs(city: str):
    """
    Read cab.csv and return all cab services for a city
    as STRING using key join method.
    """
    import pandas as pd

    df = pd.read_csv("cab.csv")
    df = df[
        (df["service_type"] == "cab") &
        (df["city"].str.lower() == city.lower()) &
        (df["availability"] == "yes")
    ]

    results = []
    for _, row in df.iterrows():
        row_str = ", ".join([f"{k}:{row[k]}" for k in df.columns])
        results.append(row_str)

    return "\n".join(results)
