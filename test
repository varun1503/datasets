from transformers import AutoTokenizer, AutoModel

class TransformerResources:
    _tokenizer = None
    _model = None

    @staticmethod
    def get_tokenizer(model_name="bert-base-uncased"):
        if TransformerResources._tokenizer is None:
            TransformerResources._tokenizer = AutoTokenizer.from_pretrained(model_name)
        return TransformerResources._tokenizer

    @staticmethod
    def get_model(model_name="bert-base-uncased"):
        if TransformerResources._model is None:
            TransformerResources._model = AutoModel.from_pretrained(model_name)
        return TransformerResources._model
