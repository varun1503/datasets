elif tag == qn('w:tbl'):
    table_obj = DocxTable(child, doc)

    # collect every paragraph (outer + nested)
    paras = [p.text.strip() for p in self.iter_table_paragraphs(table_obj) if p.text.strip()]

    # now reshape exactly as you want:
    table_data = []
    if paras:
        table_data.append([paras[0]])                      # ["34"]
    if len(paras) >= 3:
        table_data.append([paras[1], paras[2]])            # ["intent","count"]
    idx = 3
    while idx < len(paras):
        if idx + 1 < len(paras):
            table_data.append([paras[idx], paras[idx+1]]) # e.g. ["account_number_resp","102"]
        else:
            table_data.append([paras[idx]])
        idx += 2

    table_id = self.generate_id()
    parent   = get_current_parent()
    table_item = {
        "id":        table_id,
        "type":      "table",
        "data":      table_data,
        "source":    file_name,
        "parent_id": parent["id"] if parent else None
    }
    if parent:
        parent["child_ids"].append(table_id)
    ordered_content.append(table_item)
    continue
