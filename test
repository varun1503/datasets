import re

def extract_section_number_from_text(text):
    """
    Extracts section number from heading text like:
    - "Section 2.3.1 Some Title"
    - "SECTION 1.4 Title"
    - "2.1 Introduction"
    Returns the number part: "2.3.1", or None if not matched.
    """
    text = text.strip()

    # Match "Section 2.3.1", "SECTION 1.2" etc.
    match = re.match(r'(?i)^section\s+((\d+\.)+\d*)', text)
    if match:
        return match.group(1)

    # Match numbered prefix like "1.2.3 Title"
    match = re.match(r'^((\d+\.)+\d*)', text)
    if match:
        return match.group(1)

    return None
