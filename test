import re
from typing import List

def is_logical_heading(text: str, runs: List[dict]) -> bool:
    """
    Determine if a paragraph is a logical heading.
    
    Args:
        text: Paragraph text
        runs: List of run dictionaries, each containing 'bold' and 'font_size'
    
    Returns:
        bool: True if paragraph is likely a heading
    """
    text = text.strip()
    if not text:
        return False

    # Rule 1: Numbered section pattern
    if re.match(r'^\d+(\.\d+)*[\.\s]', text):
        if re.match(r'^(Figure|Table)\s*\d+(\.\d+)*[:\s]', text, re.IGNORECASE):
            return False
        return True

    # Rule 2: All caps and short (like "SUMMARY")
    if text.isupper() and len(text.split()) <= 6:
        return True

    # Rule 3: All bold and not caption-like
    if all(run.get("bold", False) for run in runs) and len(text.split()) <= 7:
        if re.match(r'^(Figure|Table|Chart|Graph|Exhibit)\s*\d*[:\s]', text, re.IGNORECASE):
            return False
        return True

    # Rule 4: Starts with number and font size is larger
    for run in runs:
        size = run.get("font_size")
        if size and size >= 11 and re.match(r'^\d+(\.\d+)*[\.\s]', text):
            return True

    return False

# Example usage
example = {
    "text": "1.1 Introduction",
    "runs": [{"bold": False, "font_size": 12}]
}
is_logical_heading(example["text"], example["runs"])
