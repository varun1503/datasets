import json

def convert_csv(rows, document_path):
    file_name = os.path.basename(document_path)

    df = pd.DataFrame(rows)

    # Convert rfr dict â†’ JSON string
    df["rfr"] = df["rfr"].apply(lambda x: json.dumps(x, ensure_ascii=False))

    df["file name"] = file_name
    df["type"] = "rfr"

    return df
