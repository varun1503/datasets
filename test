def restructure_with_angle_tags(items: list[str]) -> list[str]:
    output = []

    collecting_response = False
    buffer = []

    def flush_response():
        nonlocal buffer, collecting_response
        if buffer:
            merged = " ".join(buffer).strip()
            output.extend(["<", f"Modelling Team Response: {merged}", ">"])
        buffer = []
        collecting_response = False

    for item in items:
        text = item.strip()

        # ---------- CASE 1: [Modelling Team Response] (any form)
        if "modelling team response" in text.lower():
            # close any previous response
            flush_response()

            collecting_response = True

            # extract content after ] or :
            cleaned = text
            cleaned = cleaned.replace("[", "").replace("]", "")
            cleaned = cleaned.replace("Modelling Team Response", "", 1)
            cleaned = cleaned.replace(":", "").strip()

            if cleaned:
                buffer.append(cleaned)

            continue

        # ---------- CASE 2: Inside Modelling Team Response
        if collecting_response:
            # stop if a new block clearly starts
            if (
                text.startswith("<")
                or text.startswith("[")
                or text.lower().startswith("f")
                or text.lower().startswith("rfr")
            ):
                flush_response()
                output.append(text)
                continue

            buffer.append(text)
            continue

        # ---------- CASE 3: Normal content (unchanged)
        output.append(text)

    # safety flush
    flush_response()

    return output
