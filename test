def restructure_with_angle_tags(items: list[str]) -> list[str]:
    output = []

    collecting = False
    buffer = []

    def is_model_response_start(text: str) -> bool:
        t = text.lower()
        return (
            "modelling team response" in t
            or "[modelling team response]" in t
        )

    def flush():
        nonlocal collecting, buffer
        if buffer:
            merged = " ".join(buffer).strip()
            output.extend([
                "<",
                f"Modelling Team Response: {merged}",
                ">"
            ])
        buffer = []
        collecting = False

    for item in items:
        text = item.strip()

        # ---- START of Modelling Team Response (both cases)
        if is_model_response_start(text):
            flush()
            collecting = True

            # remove markers and noise
            cleaned = (
                text
                .replace("[", "")
                .replace("]", "")
                .replace("<", "")
                .replace(">", "")
                .replace("Modelling Team Response", "")
                .replace(":", "")
                .strip()
            )
            if cleaned:
                buffer.append(cleaned)
            continue

        # ---- CONTINUE Modelling Team Response
        if collecting:
            # stop if a new logical block starts
            if (
                text.startswith("<")
                or text.startswith("[")
                or text.lower().startswith("f")
                or text.lower().startswith("rfr")
            ):
                flush()
                output.append(text)
                continue

            buffer.append(
                text.replace("<", "").replace(">", "").strip()
            )
            continue

        # ---- NORMAL CONTENT
        output.append(text)

    # ---- SAFETY FLUSH
    flush()

    return output
