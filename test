import pandas as pd
import json

def imvp_rfr_dict_single_row_csv(processed_data, csv_path):
    records = []

    for imvp_question, data in processed_data.items():
        records.append({
            "IMVP Question": imvp_question,
            "Risk Pillar": data["Risk pillar"],
            # âœ… serialize dict safely
            "RFR": json.dumps(data["RFR"], ensure_ascii=False)
        })

    df = pd.DataFrame(records)
    df.to_csv(csv_path, index=False)
    return df
