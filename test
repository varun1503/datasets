import json

def save_chunks_to_file(preprocess_chunk, file_path="preprocess_chunk_output.txt"):
    try:
        with open(file_path, "w", encoding="utf-8") as f:
            json.dump(preprocess_chunk, f, indent=2, ensure_ascii=False)
        print(f"✅ Chunks saved to {file_path}")
    except Exception as e:
        print(f"❌ Failed to save chunks: {e}")
