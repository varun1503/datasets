from docx import Document
from docx.text.paragraph import Paragraph
from docx.oxml import OxmlElement
from docx.shared import Pt
from docx.enum.text import WD_COLOR_INDEX
import re, json, ast
import pandas as pd

# ---------- helpers ----------
def _norm(s):
    return re.sub(r"\s+", " ", (s or "")).strip().lower()

def _format_run(run, bold=False, highlight=None):
    run.bold = bool(bold)
    run.font.name = "Times New Roman"
    run.font.size = Pt(11)
    if highlight is not None:
        run.font.highlight_color = highlight

def _insert_after_para(p: Paragraph, text="", bold=False, highlight=None):
    """Insert a paragraph AFTER p with Times New Roman 11."""
    new_p = OxmlElement("w:p")
    p._p.addnext(new_p)
    q = Paragraph(new_p, p._parent)
    if text is not None:
        r = q.add_run(text)
        _format_run(r, bold=bold, highlight=highlight)
    return q

def _delete_range(paragraphs, i_from, i_to):
    if i_from is None or i_to is None or i_from > i_to:
        return
    for k in range(i_to, i_from - 1, -1):
        elm = paragraphs[k]._element
        elm.getparent().remove(elm)

def _safe_dict(x):
    if isinstance(x, dict):
        return x
    if isinstance(x, str):
        s = x.strip()
        if not s:
            return {}
        try:
            return json.loads(s)
        except Exception:
            try:
                return ast.literal_eval(s)
            except Exception:
                return {}
    return {}

def _snum(text):  # returns like "S2" if present, else ""
    m = re.search(r"\bS\s*(\d+)\b", text or "", flags=re.IGNORECASE)
    return f"S{m.group(1)}" if m else ""

def _looks_like_test(p):
    return bool(re.search(r"\btest\b", _norm(p.text)))

def _set_paragraph_text(p: Paragraph, text: str, bold=False):
    # Clear and write fresh text with desired formatting
    for r in p.runs:
        r.text = ""
    r = p.add_run(text)
    _format_run(r, bold=bold, highlight=None)

# ---------- robust heading detection ----------
# Canonical heading regexes (strict, section-safe)
_HEADING_PATTERNS = [
    r"^test(\s+s?\d+)?\b",                                   # Test / Test S1
    r"^challenge(\s+s?\d+)?\b",                              # Challenge / Challenge S1
    r"^modell?ing team response(\s+s?\d+)?\b",               # Modelling/Modeling Team Response
    r"^mrmg assessment(\s+s?\d+)?\b",                        # MRMG Assessment
    r"^mrmg evaluation(\s+s?\d+)?\b",                        # MRMG Evaluation
    r"^(finding[s]? details|validation assessment details)\b",
    r"^limitations? and control[s]?\b",
    r"^appendix\b",
    r"^references?\b",
    r"^table of contents\b",
    r"^section\b",
]
_HEADING_RE = re.compile("|".join(f"(?:{p})" for p in _HEADING_PATTERNS), re.IGNORECASE)

def _is_heading_para(p: Paragraph) -> bool:
    t = p.text.strip()
    if not t:
        return False
    # Style "Heading X"
    try:
        if p.style and "heading" in (p.style.name or "").strip().lower():
            return True
    except Exception:
        pass
    # Regex patterns
    if _HEADING_RE.search(t):
        return True
    # Short bold line heuristic (fallback)
    if len(t) <= 120 and any(r.bold for r in p.runs if r.text.strip()):
        return True
    return False

def _find_idx_in_range(paras, start, end, predicate):
    for i in range(start, min(end, len(paras))):
        if predicate(paras[i]):
            return i
    return None

# ---------- main ----------
def insert_rfr_and_mrmg_with_tags(
    doc_path: str,
    df: pd.DataFrame,
    output_path: str,
    tag_col: str = "text",                  # e.g., "Test S1"
    rfr_col: str = "rfr_value",             # dict: {<challenge text>: <model team response>}
    mrmg_col: str = "MRMG Assessment ",     # as in your sheet (trailing space)
    mtr_heading_base: str = "Modelling Team Response",
    highlight_assessment: bool = True,
    assessment_highlight_color=WD_COLOR_INDEX.YELLOW,
    DEBUG=False,  # set True to print whatâ€™s being replaced
):
    """
    Replaces the entire MRMG Assessment body (all paragraphs until the next heading)
    inside each Test S# section, without ever inserting between MTR heading and its body.
    Also normalizes 'MRMG Assessment S#:' inline cases by keeping only the heading text
    in the heading paragraph.
    """
    doc = Document(doc_path)

    for _, row in df.iterrows():
        tag = str(row.get(tag_col, "") or "").strip()
        rfr = _safe_dict(row.get(rfr_col, {}))
        mrmg_new = str(row.get(mrmg_col, "") or "").strip()
        if not tag:
            continue

        sn = _snum(tag)  # "S1", "S2", ...
        paras = doc.paragraphs

        # --- locate current Test section
        tag_norm = _norm(tag)
        start_idx = next((i for i, p in enumerate(paras) if tag_norm in _norm(p.text)), None)
        if start_idx is None and sn:
            start_idx = next((i for i, p in enumerate(paras) if sn.lower() in _norm(p.text)), None)
        if start_idx is None:
            if DEBUG: print(f"[WARN] Could not find section for tag='{tag}'")
            continue

        # end = next "Test ..." or doc end
        next_test = None
        for j in range(start_idx + 1, len(paras)):
            if _looks_like_test(paras[j]):
                next_test = j
                break
        section_end = next_test if next_test is not None else len(paras)

        # --- find MTR heading (for safe anchoring)
        def _is_mtr(p):
            t = _norm(p.text)
            return ("modelling team response" in t) or ("modeling team response" in t)
        mtr_idx = _find_idx_in_range(paras, start_idx + 1, section_end, _is_mtr)

        # --- find MRMG Assessment heading for this S# (prefer exact S#, else any within section)
        def _is_assessment_for_sn(p):
            t = _norm(p.text)
            if not t.startswith("mrmg assessment"):
                return False
            return (sn.lower() in t) if sn else True

        mrmg_head_idx = _find_idx_in_range(paras, start_idx + 1, section_end, _is_assessment_for_sn)
        if mrmg_head_idx is None:
            mrmg_head_idx = _find_idx_in_range(
                paras, start_idx + 1, section_end, lambda p: _norm(p.text).startswith("mrmg assessment")
            )

        if mrmg_head_idx is not None:
            # --- normalize heading paragraph (handle inline 'MRMG Assessment ...: inline text')
            head_text = paras[mrmg_head_idx].text.strip()
            # take only the heading phrase (before the first colon), keep S# if present
            m = re.match(r"^(mrmg assessment(?:\s+s?\d+)?)(:.*)?$", head_text, flags=re.IGNORECASE)
            if m:
                pure_heading = m.group(1)
                _set_paragraph_text(paras[mrmg_head_idx], pure_heading, bold=True)

            # --- compute body range = [mrmg_head_idx+1 .. next_heading-1], capped by section_end
            body_start = mrmg_head_idx + 1
            # find next heading INSIDE the same section
            next_head = _find_idx_in_range(paras, body_start, section_end, _is_heading_para)
            body_end = (next_head - 1) if next_head is not None else (section_end - 1)

            if body_start <= body_end:
                if DEBUG: print(f"[INFO] Replacing MRMG body: {body_start}..{body_end}")
                _delete_range(paras, body_start, body_end)
                paras = doc.paragraphs  # refresh

            # insert new single body AFTER heading
            insert_after = paras[mrmg_head_idx]
            new_body_p = _insert_after_para(
                insert_after,
                text=mrmg_new,
                bold=False,
                highlight=(assessment_highlight_color if highlight_assessment else None),
            )
            _insert_after_para(new_body_p, "")  # spacer
            continue

        # --- if no MRMG Assessment heading exists: add it, but never break MTR heading-body
        # find end of MTR body (walk until next heading)
        if mtr_idx is not None:
            i = mtr_idx + 1
            while i < section_end and not _is_heading_para(paras[i]):
                i += 1
            safe_anchor = paras[i - 1] if i > (mtr_idx + 1) else paras[mtr_idx]
        else:
            safe_anchor = paras[section_end - 1] if section_end - 1 >= start_idx else paras[start_idx]

        # (Optional) Insert RFR pairs AFTER the safe anchor (never between MTR heading & body)
        if rfr:
            cur = safe_anchor
            for ch_text, resp_text in rfr.items():
                ch_head = f"Challenge {sn}" if sn else "Challenge"
                mtr_head = f"{mtr_heading_base} {sn}" if sn else mtr_heading_base

                cur = _insert_after_para(cur, ch_head, bold=True)
                cur = _insert_after_para(cur, str(ch_text or "").strip(), bold=False)

                cur = _insert_after_para(cur, mtr_head, bold=True)
                cur = _insert_after_para(cur, str(resp_text or "").strip(), bold=False)

                cur = _insert_after_para(cur, "")  # spacer
            safe_anchor = cur

        # finally, create MRMG Assessment
        if mrmg_new:
            a_head = f"MRMG Assessment {sn}" if sn else "MRMG Assessment"
            h = _insert_after_para(safe_anchor, a_head, bold=True)
            b = _insert_after_para(
                h,
                mrmg_new,
                bold=False,
                highlight=(assessment_highlight_color if highlight_assessment else None),
            )
            _insert_after_para(b, "")  # spacer

    doc.save(output_path)
