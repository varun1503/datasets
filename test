def restructure_with_angle_tags(items: list[str]) -> list[str]:
    """
    Rules:
    - Normal < ... > blocks -> single merged string
    - Modelling Team Response -> always output as:
        "<", "Modelling Team Response: content", ">"
    - Works even if Modelling Team Response is on the same line as < >
    """
    output = []
    buffer = []
    inside_block = False
    is_model_response = False

    for item in items:
        text = item.strip()

        # CASE 1: Modelling Team Response fully on one line with < >
        if (
            "Modelling Team Response" in text
            and text.startswith("<")
            and text.endswith(">")
        ):
            content = text[1:-1].strip()
            output.extend(["<", content, ">"])
            continue

        # CASE 2: Modelling Team Response start (any form)
        if "Modelling Team Response" in text and not inside_block:
            inside_block = True
            is_model_response = True
            buffer = [text.replace("<", "").replace(">", "").strip()]
            continue

        # CASE 3: Start of normal < block
        if text.startswith("<") and not inside_block:
            inside_block = True
            is_model_response = False
            buffer = [text.replace("<", "").strip()]
            continue

        # CASE 4: End of block
        if text.endswith(">") and inside_block:
            clean = text.replace("<", "").replace(">", "").strip()
            if clean:
                buffer.append(clean)

            merged = " ".join(buffer).strip()

            if is_model_response:
                output.extend(["<", merged, ">"])
            else:
                output.append(f"< {merged} >")

            buffer = []
            inside_block = False
            is_model_response = False
            continue

        # CASE 5: Inside block
        if inside_block:
            buffer.append(text.replace("<", "").replace(">", "").strip())
        else:
            output.append(text)

    # SAFETY: unclosed block
    if buffer:
        merged = " ".join(buffer).strip()
        if is_model_response:
            output.extend(["<", merged, ">"])
        else:
            output.append(f"< {merged} >")

    return output
