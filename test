def restructure_with_angle_tags(items: list[str]) -> list[str]:
    """
    - Merge content between < and >.
    - Preserve < and >.
    - For 'Modelling Team Response', output as:
        "<", "Modelling Team Response: content", ">"
    """
    output = []
    buffer = []
    inside_block = False
    is_model_response = False

    for item in items:
        text = item.strip()

        # Detect Modelling Team Response start (with or without <)
        if "Modelling Team Response" in text and not inside_block:
            inside_block = True
            is_model_response = True
            buffer = [text.replace("<", "").replace(">", "").strip()]
            continue

        # Start of normal < block
        if text.startswith("<") and not inside_block:
            inside_block = True
            is_model_response = False
            buffer = [text.replace("<", "").strip()]
            continue

        # End of block
        if text.endswith(">") and inside_block:
            clean_text = text.replace("<", "").replace(">", "").strip()
            if clean_text:
                buffer.append(clean_text)

            merged_content = " ".join(buffer).strip()

            if is_model_response:
                output.extend([
                    "<",
                    merged_content,
                    ">"
                ])
            else:
                output.append(f"< {merged_content} >")

            buffer = []
            inside_block = False
            is_model_response = False
            continue

        # Inside block
        if inside_block:
            buffer.append(text.replace("<", "").replace(">", "").strip())
        else:
            output.append(text)

    # Safety: unclosed block
    if buffer:
        merged_content = " ".join(buffer).strip()
        if is_model_response:
            output.extend(["<", merged_content, ">"])
        else:
            output.append(f"< {merged_content} >")

    return output
