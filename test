import os
from pathlib import Path

print("ğŸ” CWD:", os.getcwd())  # Where the script is executed from
print("ğŸ” __file__:", __file__)  # Where the script is located
print("ğŸ” Resolved __file__:", Path(__file__).resolve())

# Now get the common path correctly
script_path = Path(__file__).resolve()  
base_path = script_path.parent.parent.parent  # Adjust as per your structure
common_path = base_path / 'common'

print("âœ… Corrected common_path:", common_path)

# Set environment variable
os.environ.setdefault('CLI_COMMON_PATH', str(common_path))
