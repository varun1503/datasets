def restructure_with_angle_tags(items: list[str]) -> list[str]:
    output = []

    buffer = []
    collecting_model_response = False

    def flush_model_response():
        nonlocal buffer, collecting_model_response
        if buffer:
            content = " ".join(buffer).strip()
            output.extend(["<", content, ">"])
        buffer = []
        collecting_model_response = False

    for item in items:
        text = item.strip()

        # ---------- CASE 1: Modelling Team Response (any form)
        if "Modelling Team Response" in text:
            # flush any previous response safely
            flush_model_response()

            collecting_model_response = True
            clean = text.replace("<", "").replace(">", "").strip()
            buffer.append(clean)
            continue

        # ---------- CASE 2: End of Modelling Team Response
        if collecting_model_response:
            # explicit closing
            if text == ">":
                flush_model_response()
                continue

            # next logical block starts â†’ close response
            if text.startswith("<") and "Modelling Team Response" not in text:
                flush_model_response()
                output.append(text)
                continue

            # normal continuation
            buffer.append(text.replace("<", "").replace(">", "").strip())
            continue

        # ---------- CASE 3: Normal < ... > blocks (unchanged)
        if text.startswith("<") and text.endswith(">"):
            output.append(text)
            continue

        # ---------- CASE 4: Plain text
        output.append(text)

    # safety flush
    flush_model_response()

    return output
