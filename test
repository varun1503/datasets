from langchain.prompts import PromptTemplate
from langchain.chains import LLMChain

def call_llm(model):

    PROMPT_TEMPLATE = """
    SYSTEM INSTRUCTION:
    You are an expert summarization assistant.
    Summarize the user input clearly and concisely.
    Focus only on the key points.

    USER INPUT:
    {user_input}

    SUMMARY:
    """

    prompt = PromptTemplate(
        input_variables=["user_input"],
        template=PROMPT_TEMPLATE
    )

    chain = LLMChain(
        llm=model,
        prompt=prompt
    )

    result = chain.invoke({
        "user_input": "Text that needs to be summarized"
    })

    return result
