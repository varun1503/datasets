from typing import List

def replace_rfr_entries(main_list: List[str], replacements: List[str], new_value: str = "") -> List[str]:
    """
    Replaces elements from `replacements` in `main_list` with `new_value`.

    Args:
        main_list: The main list of strings.
        replacements: List of strings to be replaced if found in main_list.
        new_value: The string to replace with. Default is empty string (remove).

    Returns:
        A new list with replacements applied.
    """
    replacements_set = set(s.strip() for s in replacements)
    result = []
    for item in main_list:
        item_clean = item.strip()
        if item_clean in replacements_set:
            result.append(new_value)  # Replace with custom value (can be "" to remove)
        else:
            result.append(item)
    return result
