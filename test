def create_ann_index_cosine(keyspace: str, table: str, clusternode: list, vector_column: str) -> None:
    index_name = f"ann_index_{vector_column}"
    cluster = Cluster(clusternode, auth_provider=PlainTextAuthProvider(username=USER_NAME, password=PASSWORD))
    session = cluster.connect()
    session.set_keyspace(keyspace)

    index_query = f"""
    CREATE CUSTOM INDEX IF NOT EXISTS {index_name}
    ON {table}({vector_column})
    USING 'StorageAttachedIndex'
    WITH OPTIONS = {{ 'similarity_function': 'COSINE' }};
    """

    session.execute(index_query)
    print(f"Vector index created on '{vector_column}' for {table} with COSINE similarity.")

    ensure_index_created(session, keyspace, table, index_name)

    session.shutdown()
    cluster.shutdown()
