def get_table_columns(session, keyspace_name: str, table_name: str) -> list:
    """
    Get all column names for a given table in a Cassandra keyspace.

    Args:
        session: Cassandra DB session object.
        keyspace_name (str): The name of the keyspace.
        table_name (str): The name of the table.

    Returns:
        list: List of column names as strings.
    """
    query = f"""
    SELECT column_name
    FROM system_schema.columns
    WHERE keyspace_name = '{keyspace_name}'
      AND table_name = '{table_name}';
    """
    try:
        result = session.execute(query)
        return [row.column_name for row in result]
    except Exception as e:
        print(f"‚ùå Failed to fetch columns for {keyspace_name}.{table_name}: {e}")
        return []
