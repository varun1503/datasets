def restructure_with_angle_tags(items: list[str]) -> list[str]:
    """
    Merge all content between '<' and '>' into a single list element,
    while preserving the '<' and '>' tags.
    """
    output = []
    buffer = []
    inside_block = False

    for item in items:
        text = item.strip()

        # Start of a < ... > block
        if text.startswith("<") and not inside_block:
            inside_block = True
            buffer = [text]
            continue

        # End of a < ... > block
        if text.endswith(">") and inside_block:
            buffer.append(text)
            merged = " ".join(buffer)
            output.append(merged)
            buffer = []
            inside_block = False
            continue

        # Content inside < ... >
        if inside_block:
            buffer.append(text)
        else:
            # Normal text outside tags
            output.append(text)

    # Safety: if '<' was never closed
    if buffer:
        output.append(" ".join(buffer))

    return output
