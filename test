# Sample: List of dicts
data_list = [
    {
        "triple": 1,
        "page": 3,
        "source": "Document A",
        "content": "Visa's revenue in Q2 grew significantly across multiple regions."
    },
    {
        "triple": 2,
        "page": 7,
        "source": "Document B",
        "content": "Transaction revenue was higher due to increased payment volumes."
    }
]

# Inside the retrieved_document column
with retrieved_document:
    st.subheader("📄 Retrieved Documents")

    for idx, doc in enumerate(data_list):
        with st.expander(f"🔗 Triple {doc['triple']} — Page {doc['page']}"):
            st.markdown(f"**📘 Source:** `{doc['source']}`")
            st.markdown(f"**📝 Content:**\n\n{doc['content']}")
