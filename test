for idx, (x, y) in enumerate(reduced_matrix[len(reference_texts):]):
    color = 'red' if target_labels[idx] == -1 else 'blue'
    plt.scatter(x, y, c=color, label=f"Target Sentence {idx+1}" if color == 'red' else None)
    plt.text(x+0.1, y+0.1, f"{idx+1}", fontsize=12)

# Plot the reference data points
for x, y in reduced_matrix[:len(reference_texts)]:
    plt.scatter(x, y, c='green', label="Reference", marker='x')

# Labeling
plt.title("2D Visualization of Text Data with Outliers Highlighted")
plt.xlabel("PCA Dimension 1")
plt.ylabel("PCA Dimension 2")
plt.legend(loc="best", fontsize="small", markerscale=1, scatterpoints=1)
plt.grid(True)
plt.show()
