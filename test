def early_stop(validation_loss, best_loss, epochs_no_improve, patience, min_delta):
    if validation_loss < best_loss - min_delta:
        best_loss = validation_loss
        epochs_no_improve = 0  # Reset counter on improvement
        return False, best_loss, epochs_no_improve
    else:
        epochs_no_improve += 1  # Increment counter on no improvement
        if epochs_no_improve >= patience:
            return True, best_loss, epochs_no_improve
        return False, best_loss, epochs_no_improve
