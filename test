import os
from dotenv import load_dotenv

load_dotenv()  # Load from .env

# Convert comma-separated string to list of strings
contact_points: list[str] = os.environ.get("cluster_nodes", "127.0.0.1").split(",")

# Optional: strip whitespace
contact_points = [ip.strip() for ip in contact_points]

print("Contact Points:", contact_points)
