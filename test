 Analyze anomalies
for idx in anomalous_indices:
    print(f"Analyzing document: {documents[idx]}")
    # Get TF-IDF values for this document
    tfidf_values = vectors[idx]
    # Create a DataFrame for easier visualization
    word_contributions = pd.DataFrame({
        "Word": feature_names,
        "TF-IDF Value": tfidf_values
    })
    # Sort by importance (TF-IDF Value)
    word_contributions = word_contributions.sort_values(by="TF-IDF Value", ascending=False)
    print(word_contributions)
