import ast

def filter_tuples_by_theme(data_list, theme_keyword):
    """
    Filters a list of stringified tuples to only those whose first element matches the theme_keyword.
    
    Args:
        data_list (list): List of stringified tuples.
        theme_keyword (str): The keyword to match in the first element of each tuple.

    Returns:
        list: A list of actual tuples that match the theme_keyword.
    """
    cleaned_list = []

    for item in data_list:
        try:
            # Clean up stray quotes or malformed strings
            item = item.strip(" '\"\n")
            # Ensure it's a proper tuple before evaluating
            if not item.startswith("("):
                item = f"({item})"
            tup = ast.literal_eval(item)
            if tup[0].strip() == theme_keyword:
                cleaned_list.append(tup)
        except Exception as e:
            print(f"Skipping malformed item: {item} -- Error: {e}")
    
    return cleaned_list
